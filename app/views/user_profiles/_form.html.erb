  <div class="field">
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>


  <%= form.file_field :image %>
  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= form.submit %>
  </div>
