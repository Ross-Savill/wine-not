<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Wine</th>
      <th>Wine name</th>
      <th>Year</th>
      <th>Description</th>
      <th>Type</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.wine_id %></td>
        <td><%= wine.wine_name %></td>
        <td><%= wine.year %></td>
        <td><%= wine.description %></td>
        <td><%= wine.type %></td>
        <td><%= wine.profile_id %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

